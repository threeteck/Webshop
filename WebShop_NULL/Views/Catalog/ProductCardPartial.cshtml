@model WebShop_FSharp.ViewModels.CatalogModels.ProductCardDTO

@using WebShop_FSharp

<div class="col-lg-4 col-md-6">
    <div class="product">
        <div class="flip-container">
            <div class="flipper">
                <div class="front">
                    <a href="@Url.Content($"~/product/{Model.Id}")">
                        <img src="@Url.Content($"~/{Model.ImagePath}")" alt="@Url.Content("~/applicationData/productImages/placeholder.jpeg")" class="img-fluid product-card-img">
                    </a>
                </div>
                                            
                <div class="back">
                    <a href="@Url.Content($"~/product/{Model.Id}")">
                        <img src="@Url.Content($"~/{Model.ImagePath}")" alt="@Url.Content("~/applicationData/productImages/placeholder.jpeg")" class="img-fluid product-card-img">
                    </a>
                </div>
            </div>
        </div>
        <a href="@Url.Content($"~/product/{Model.Id}")" class="invisible">
            <img src="@Url.Content($"~/{Model.ImagePath}")" alt="@Url.Content("~/applicationData/productImages/placeholder.jpeg")" class="img-fluid product-card-img">
        </a>
        <div class="text">
            <h3>
                <a href="@Url.Content($"~/product/{Model.Id}")">@Model.Name</a>
            </h3>
            <p class="price">
                <del></del><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                </svg> @(Model.Rating == 0 ? "Без рейтинга" : $"{Model.Rating:#.#}")
            </p>
            <p class="price">
                <del></del>Цена: @(Model.Price)₽
            </p>
            <p class="buttons">
                <a href="@Url.Content($"~/product/{Model.Id}")" class="btn btn-outline-secondary">Подробнее</a>
            </p>
        </div>
        <!-- /.text-->
    </div>
    <!-- /.product            -->
</div>