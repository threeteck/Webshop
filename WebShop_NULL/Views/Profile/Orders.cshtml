@model IEnumerable<WebShop_FSharp.ViewModels.OrderModels.OrderInfoViewModel>
@{
    ViewData["Title"] = "Заказы";
}
<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-are="" asp-controller="Home" asp-action="Index">Главная</a></li>
                            <li aria-current="page" class="breadcrumb-item active">Мои заказы</li>
                        </ol>
                    </nav>
                </div>
                @Html.Partial("ProfileMenuPartial", 0)
                <div id="customer-orders" class="col-lg-9">
                    <div class="box">
                        <h1>Мои заказы</h1>
                        <p class="lead">Все заказы в одном месте</p>
                        <hr>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Заказ</th>
                                        <th>Дата</th>
                                        <th>Сумма</th>
                                        <th>Статус</th>
                                        <th>Действие</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in Model)
                                    {
                                        <tr>
                                            <th>@m.OrderId</th>
                                            <td class="td-text-centered">@m.CreateDate.ToString("dd-MM-yyyy")</td>
                                            <td class="td-text-centered">@m.TotalPrice</td>
                                            <td class="td-text-centered"><span class="badge @m.State.CssClass">@m.State.State</span></td>
                                            <td class="td-text-centered"><a href="@Url.Action("OrderPage","Profile",new { orderId = m.OrderId })" class="btn btn-primary btn-sm">View</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

