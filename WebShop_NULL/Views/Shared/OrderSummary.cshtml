@model WebShop_FSharp.ViewModels.OrderModels.OrderSummaryViewModel
@{ 
    Layout = "";
}

    <div class="col-md-3" id="order-summary">
        <div id="order-summary" class="card">
            <div class="card-header">
                <h3 class="mt-4 mb-4">Заказ</h3>
            </div>
            <div class="card-body">
                <p class="text-muted">Общие сведения о заказе</p>
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Число товаров</td>
                                <th>@Model.TotalCount</th>
                            </tr>
                            <tr>
                                <td>Общая стоимость</td>
                                <th>@Model.TotalPrice</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>